<%= form_for @veiculo, :html => { :class => "form-horizontal veiculo" } do |f| %>

  <% if @veiculo.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@veiculo.errors.count, "error") %> prohibited this veiculo from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @veiculo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :modelo, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :modelo, :class => 'form-control' %>
    </div>
    <%=f.error_span(:modelo) %>
  </div>
  <div class="form-group">
    <%= f.label :marca_veiculo_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :marca_veiculo_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:marca_veiculo_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                veiculos_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
